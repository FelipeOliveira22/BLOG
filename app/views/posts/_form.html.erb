<%= form_with(model: post, data: { turbo: false }) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", rows: 5 %>
  </div>

    <%= form.submit "Criar Post", class: "btn btn-primary mt-3", data: { disable_with: "Criando..." } %>
<% end %>
