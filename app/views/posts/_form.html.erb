<%= form_with(model: post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, "Título" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :author, "Autor" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body, "Conteúdo" %>
    <%= form.text_area :body, class: "form-control", rows: 5, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :tags, "Tags (separadas por vírgula)" %>
    <%= form.text_field :tags, value: post.tags.map(&:name).join(", "), class: "form-control", placeholder: "Ex: Ruby,Rails,Web" %>
  </div>

  <%= form.submit "Salvar", class: "btn btn-primary mt-3" %>
<% end %>
