<div class="card bg-light mb-3">
  <div class="card-body">
    <h4><%= link_to post.title, post, class: 'clickable text-dark' %></h4>

    <div class="text-muted mb-2">
      <em>Por <%= post.author %> (<%= l post.created_at, format: :long %>)</em>
      <p><%= post.body.truncate(200) %></p>

      <p class="text-muted">
        <%= pluralize(post.comments.count, "Comentário", "Comentários") %>
      </p>

      <div class="d-flex gap-2">
        <%= link_to "Ler Artigo", post, class: "btn btn-primary" %>
        <%= link_to "Editar", edit_post_path(post), class: "btn btn-secondary" %>
        <%= form_with url: delete_post_path(post), method: :post, local: true do |f| %>
          <%= f.submit "Apagar", class: "btn btn-danger", data: { confirm: "Você tem certeza que deseja excluir?" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
