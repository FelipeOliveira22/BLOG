<h2 class="text-center">Gerenciar Perfil</h2>

<div class="row mt-4">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header text-white bg-primary">
        <strong>Opções do Usuário</strong>
      </div>
      <div class="list-group list-group-flush">
        <%= link_to "Editar Cadastro", edit_user_path(current_user), class: "list-group-item list-group-item-action" %>
        <%= link_to "Alterar Senha", change_password_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "<strong>Voltar para Posts</strong>".html_safe, posts_path, class: "list-group-item list-group-item-action",
          data: { confirm: "Tem certeza que deseja sair?" },
          params: { redirect_to: posts_path } %>

      </div>
    </div>
  </div>
</div>
